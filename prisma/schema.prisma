generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model clicks {
  id            String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  share_link_id String      @db.Uuid
  clicked_at    DateTime?   @default(now()) @db.Timestamp(6)
  share_links   share_links @relation(fields: [share_link_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model coupons {
  id          String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id     String        @db.VarChar(255)
  shop_id     String        @db.Uuid
  expires_at  DateTime      @db.Timestamp(6)
  shops       shops         @relation(fields: [shop_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users       users         @relation(fields: [user_id], references: [email], onDelete: NoAction, onUpdate: NoAction)
  redemptions redemptions[]
  share_links share_links[]
}

model redemptions {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  coupon_id   String    @db.Uuid
  redeemed_at DateTime? @default(now()) @db.Timestamp(6)
  coupons     coupons   @relation(fields: [coupon_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model share_links {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  coupon_id String   @db.Uuid
  link      String   @db.VarChar(255)
  clicks    clicks[]
  coupons   coupons  @relation(fields: [coupon_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model shops {
  id       String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name     String    @db.VarChar(255)
  owner_id String    @db.VarChar(255)
  coupons  coupons[]
  users    users     @relation(fields: [owner_id], references: [email], onDelete: NoAction, onUpdate: NoAction)
}

model users {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email         String    @unique @db.VarChar(255)
  password_hash String    @db.VarChar(255)
  role          String    @db.VarChar(50)
  created_at    DateTime? @default(now()) @db.Timestamp(6)
  coupons       coupons[]
  shops         shops[]
}
